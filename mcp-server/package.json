{
  "name": "lcfs-mcp-server",
  "version": "1.0.0",
  "description": "LCFS Model Context Protocol server for local development",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "lcfs-mcp-server": "./dist/index.js"
  },
  "scripts": {
